<h1>Dashboard</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Category</th>
      <th>Product Quantity</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
    <% i=0%>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.id%>
        </td>
        <td>
          <%= category.name%>
        </td>
        <td>          
          <%= count_products_by_category[i]%>
          <% i+=1%>
        </td>
        <td>
          <%= link_to "Detail",category_path(id: category.id) %>
        </td>
      </tr>
      <%end%>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="2">Total </th>
      <th><%= count_products_by_category.sum%></th>
      <th> <%= link_to "All Products",products_path %></th>
    </tr>
  </tfoot>
</table>