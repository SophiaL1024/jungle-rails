<% flash.each do |type, msg| %>
<div class="alert alert-danger">
  <%= msg %>
</div>
<% end %>

<h1>Login</h1>

<%= form_for :session, url: '/sessions' do %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>

  <%= submit_tag "Submit" , class: 'btn btn-primary' %>

<% end %>

